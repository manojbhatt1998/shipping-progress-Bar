<script>
// Attach click listeners to all plus/minus buttons
document.querySelectorAll('.bundle-component-quantity-selector button').forEach(componentQuantityButton => {
  componentQuantityButton.addEventListener('click', function(e) {
    e.preventDefault();
    const parents_div = e.target.closest(".bundle-component-quantity");
    QtyButton(parents_div);
  });
});

// Handle quantity increment/decrement
function QtyButton(qty_btn) {
  const clickedButton = event.target.closest('button');
  if (!clickedButton) return;

  const parentDiv = clickedButton.closest(".bundle-component-quantity");
  const input = parentDiv.querySelector('input[type="number"]');
  if (!input) return;

  // Ensure input is enabled
  input.disabled = false;

  let currentValue = parseInt(input.value, 10) || 0; // fallback to 0 if NaN
  const maxValue = parseInt(input.max, 10);
  const minValue = parseInt(input.min, 10);

  if (clickedButton.classList.contains("bundle-plus")) {
    if (currentValue < maxValue) {
      currentValue += 1;
      input.value = currentValue;
      console.log("plus");
    }
  } else if (clickedButton.classList.contains("bundle-minus")) {
    if (currentValue > minValue) {
      currentValue -= 1;
      input.value = currentValue;
      console.log("minus");
    }
  }

  // Re-enable buttons based on updated value
  const plusBtn = parentDiv.querySelector('.bundle-plus');
  const minusBtn = parentDiv.querySelector('.bundle-minus');

  plusBtn.disabled = currentValue >= maxValue;
  minusBtn.disabled = currentValue <= minValue;

  parentDiv.classList.add("selected");
  input.classList.add("testttt");

  refreshBundleBoxes();
}

// Rebuild image layout based on current quantities
function refreshBundleBoxes() {
  const bundleBoxes = document.querySelectorAll('.bundle-selection.bundle-selection-normal .bundle-selection-box');
  const quantityComponents = document.querySelectorAll('.bundle-component-quantity');
  console.log("quantityComponents",quantityComponents);

  // Clear all boxes first
  bundleBoxes.forEach(box => {
    box.innerHTML = `<span class="icon-bundle-bottle"></span>`;

    getTotalPrice(quantityComponents);
  });


//get total Selected Price
function getTotalPrice(quantityComponents) {
  let totalPrice = 0;
  quantityComponents.forEach(component => {
    const input = component.querySelector('input[type="number"]');
    const quantity = parseInt(input.value, 10);
    console.log("quantity",quantity);
    const price = parseFloat(component.dataset.price) || 0;
    totalPrice += quantity * price;
    console.log("totalPrice",totalPrice);
    document.querySelector('.bundle-total-price').textContent = `$${totalPrice.toFixed(2)}`;
  });
  return totalPrice.toFixed(2);
}

  let boxIndex = 0;

  // Loop through each component and re-append images based on quantity
  quantityComponents.forEach(component => {
    const input = component.querySelector('input[type="number"]');
    const quantity = parseInt(input.value, 10);
    const dataImage = component.dataset.variantImage;

    for (let i = 0; i < quantity; i++) {
      if (boxIndex < bundleBoxes.length) {
        bundleBoxes[boxIndex].innerHTML = `<img src="${dataImage}" alt="image">`;
        boxIndex++;
      }
    }

    // Enable/disable individual plus/minus buttons based on quantity
    const plusBtn = component.querySelector('.bundle-plus');
    const minusBtn = component.querySelector('.bundle-minus');
    const maxValue = parseInt(input.max, 10);
    const minValue = parseInt(input.min, 10);

    plusBtn.disabled = quantity >= maxValue;
    minusBtn.disabled = quantity <= minValue;
  });

  // If all boxes are filled, disable all plus buttons globally
  const allFilled = boxIndex >= bundleBoxes.length;
  document.querySelectorAll('.bundle-plus').forEach(btn => {
    btn.disabled = allFilled;
  });
}
document.querySelectorAll('.bundle-component-remove').forEach(removeBtn => {
  removeBtn.addEventListener('click', function(e) {
    e.preventDefault();

    const parentDiv = e.target.closest(".bundle-component-quantity");
    const input = parentDiv.querySelector('input[type="number"]');
    if (!input) return;

    // Set quantity to 0
    input.value = 0;

    // Disable plus/minus buttons
    const plusBtn = parentDiv.querySelector('.bundle-plus');
    const minusBtn = parentDiv.querySelector('.bundle-minus');
    plusBtn.disabled = true;
    minusBtn.disabled = true;

    // Optional: visually mark as removed
    parentDiv.classList.remove("selected");

    // Refresh image layout
    refreshBundleBoxes();
  });
});

</script>
</html>
